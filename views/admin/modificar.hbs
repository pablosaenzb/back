<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Producto</h4>
            <br>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3 row">
                    <label for="">Nombre</label>
                    <input type="text" class="form-control" name="nombre" value="{{novedad.nombre}}">
                </div>
               
                 <div class="mb-3 row">
                    <label for="">Marca</label>
                    <input type="text" class="form-control"  name="marca" value="{{novedad.marca}}">
                </div>
                
                 <div class="mb-3 row">
                    <label for="">Precio</label>
                    <input type="text" class="form-control"  name="precio" value="{{novedad.precio}}">
                </div>
                
                 <div class="mb-3 row">
                <label for="">Observaciones</label>
                <textarea class="form-control"  name="observaciones">{{novedad.observaciones}}</textarea>
                </div>
                <div class="mb-3 row">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">  Eliminar imagen actual  </label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
               
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p style="color:red;">{{message}}</p>
            {{/if}}
        </div>
    </div>

</div>